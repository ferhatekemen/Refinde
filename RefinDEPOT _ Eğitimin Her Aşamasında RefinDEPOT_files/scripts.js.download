function url_rw(href, title) {
    if (window.history && window.history.pushState) {
        var backUrl = window.location.pathname;
        if (backUrl != href) {
            window.history.pushState(backUrl, title, href);
        }
    }
}

function loading_start(target) {
    if (target != "") {
        $("#" + target).append("<div id=\"loading\" class=\"sk-loading\"><div class=\"sk-spinner sk-spinner-double-bounce\"><div class=\"sk-double-bounce1\"></div><div class=\"sk-double-bounce2\"></div></div></div>");
    }
}

function loading_stop(target) {
    if (target != "") {
        $("#" + target + ".loading").remove();
    }
}

window.onpopstate = function (event) {
    if (event.state != window.location.pathname) {
        window.location.reload();
    }
};